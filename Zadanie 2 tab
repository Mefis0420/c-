#include<iostream>
using namespace std;

int main(){
	int tab[2][2];
	int i, j;
	for (i = 0; i < 2; i++){
		for (j = 0; j < 2; j++){
			cin >> tab[i][j];}}
    for (i = 0; i < 2; i++){
		for (j = 0; j < 2; j++){
			cout << tab[i][j];}
		cout << endl;}

	int macierz = tab[0][1] * tab[1][0] - (tab[0][0] * tab[1][1]);
	cout << "Wyznacznik macierzy: " << macierz << endl;
}
